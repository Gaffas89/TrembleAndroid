<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/tremble_login_background"
    tools:context="com.techzonecs.tremble.controller.LoginPageActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/TFfield_SISID"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/TFfield_pw"
        android:hint="SISID"
        android:textColorHint="#ecebeb"
        android:textColor="#ffffff" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/TFfield_pw"
        android:layout_marginBottom="164dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColorHint="#ecebeb"
        android:hint="Password"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Forget Password?"
        android:id="@+id/tv_forget_pw"
        android:layout_marginTop="51dp"
        android:textColor="#7acdeb"
        android:layout_alignTop="@+id/TFfield_pw"
        android:layout_alignEnd="@+id/TFfield_pw" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIGN IN"
        android:id="@+id/btn_signin"
        android:layout_below="@+id/tv_forget_pw"
        android:layout_alignEnd="@+id/tv_forget_pw"
        android:layout_marginTop="44dp"
        android:layout_alignStart="@+id/TFfield_pw"
        android:textColor="#ce8600" />

    <ImageView
        android:layout_width="400dp"
        android:layout_height="110dp"
        android:layout_marginLeft="120dp"
        android:background="@drawable/tremble_temp_logo"
        android:id="@+id/imageView_LoginPage"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="[ Tremble ]"
        android:id="@+id/textView"
        android:layout_below="@+id/imageView_LoginPage"
        android:textColor="#ffffff"
        android:layout_alignEnd="@+id/TFfield_SISID"
        android:layout_alignStart="@+id/TFfield_SISID"
        android:gravity="center"
        android:textSize="30dp" />
</RelativeLayout>
