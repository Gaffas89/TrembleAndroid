<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.techzonecs.tremble.controller.HomePageActivity">


    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MY PROFILE"
        android:id="@+id/btn_profile"
        android:layout_marginTop="175dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/btn_sessions"
        android:layout_alignEnd="@+id/btn_sessions" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MY QR CARD"
        android:id="@+id/btn_QR"
        android:layout_below="@+id/btn_profile"
        android:layout_alignEnd="@+id/btn_profile"
        android:layout_alignStart="@+id/btn_profile" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MY NEXT SESSIONS"
        android:id="@+id/btn_sessions"
        android:layout_below="@+id/btn_QR"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MY EVALUATION"
        android:id="@+id/btn_evaluation"
        android:layout_below="@+id/btn_sessions"
        android:layout_alignEnd="@+id/btn_sessions"
        android:layout_alignStart="@+id/btn_sessions" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGOUT"
        android:id="@+id/btn_logout"
        android:layout_below="@+id/btn_evaluation"
        android:layout_alignStart="@+id/btn_evaluation"
        android:layout_alignEnd="@+id/btn_evaluation" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView_homepage"
        android:layout_marginLeft="120dp"
        android:background="@mipmap/ic_logo" />

</RelativeLayout>
